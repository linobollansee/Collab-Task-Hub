# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=your_production_db_user
DB_PASSWORD=your_production_db_password_CHANGE_ME
DB_DATABASE=collab_task_hub

# Application Configuration
PORT=4000
NODE_ENV=production
BACKEND_PORT=4000
FRONTEND_PORT=3001

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=your_jwt_secret_key_CHANGE_ME_MINIMUM_32_CHARACTERS
CORS_ORIGIN=https://yourdomain.com

# Docker Configuration
DOCKER_REGISTRY=your-registry.io/your-username
VERSION=latest

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=https://api.yourdomain.com

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Mailjet Email Service (https://mailjet.com)
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_SECRET_KEY=your_mailjet_secret_key_here
MAILJET_SENDER_EMAIL=noreply@yourdomain.com

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Logging
LOG_LEVEL=info
